<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.crms.mapper.TopicMapper">


    <update id="updateTopicByTopicId" parameterType="Topic">
        UPDATE  topic
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="description!=null">
                description=#{description},
            </if>
            <if test="groupNumberLimit!=null">
                group_number_limit=#{groupNumberLimit},
            </if>
            <if test="groupStudentLimit!=null">
                group_student_limit=#{groupStudentLimit},
            </if>

            <if test="seminar!=null">
                seminar_id=#{seminar.id},
            </if>
        </set>
        WHERE id=#{id}
    </update>

    <select id="getTopicByTopicId" resultMap="topicResultMap">
        SELECT  id,name,description,group_number_limit,group_student_limit,seminar_id
        From topic
        WHERE id=#{topicId}
    </select>



    <delete id="deleteTopicByTopicId" parameterType="Topic">
        DELETE FROM topic WHERE id=#{id}
    </delete>

    <select id="listTopicBySeminarId" resultMap="topicResultMap">
        SELECT  id,name,description,group_number_limit,group_student_limit,seminar_id
        From topic
        WHERE seminar_id=#{topicId}
    </select>

    <insert id="insertTopicBySeminarId" parameterType="Topic" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO topic
        (id, name, description, group_number_limit, group_student_limit, seminar_id)
        VALUES
        (#{id}, #{name}, #{description}, #{groupNumberLimit}, #{groupStudentLimit}, #{seminar.id})
    </insert>


    <delete id="deleteTopicById" parameterType="seminarGroupTopic">
        DELETE FROM seminar_group_topic WHERE topic_id=#{topic.id} AND seminar_group_id=#{seminarGroup.id}
    </delete>

    <delete id="deleteSeminarGroupTopicByTopicId">
        DELETE FROM seminar_group_topic WHERE topic_id=#{topicId}
    </delete>

    <select id="getSeminarGroupTopicById" parameterType="SeminarGroupTopic" resultMap="seminarGroupTopicResultMap">
        SELECT  id,topic_id,seminar_group_id,presentation_grade
        From seminar_group_topic
        WHERE topic_id=#{topic.id} AND seminar_group_id=#{seminarGroup.id}
    </select>

    <resultMap id="topicResultMap" type="Topic">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="groupNumberLimit" column="group_number_limit"/>
        <result property="groupStudentLimit" column="group_student_limit"/>
        <result property="seminar.id" column="seminar_id"/>
    </resultMap>

    <resultMap id="seminarGroupTopicResultMap" type="SeminarGroupTopic">
        <id property="id" column="id"/>
        <result property="topic.id" column="topic_id"/>
        <result property="seminarGroup.id" column="seminar_group_id"/>
        <result property="presentationGrade" column="presentation_grade"/>
    </resultMap>

</mapper>